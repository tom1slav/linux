auto-reload yes
reload-time 5
reload-threads 50

bind-key j down
bind-key k up
bind-key j next articlelist
bind-key k prev articlelist
bind-key l open
bind-key h quit

bind-key SPACE macro-prefix
unbind-key ,

macro v set browser "mpv %u" ; open-in-browser ; toggle-article-read "read"
macro a set browser "mpv --no-video %u" ; open-in-browser ; toggle-article-read "read"
